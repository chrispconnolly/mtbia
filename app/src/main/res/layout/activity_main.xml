<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.chrisconnolly.concussionapp.MainActivity">

    <android.support.v4.widget.SlidingPaneLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/slidingPaneLayout">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ExpandableListView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/menuExpandableListView"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/menuButton"
                android:textSize="17dp"
                android:textStyle="bold"
                android:background="@android:color/transparent"
                android:layout_margin="0dp"
                android:padding="0dp"
                android:onClick="menu"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/physicalLayout"
                android:orientation="vertical"
                android:visibility="gone">
                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/headacheCheckBox"
                    android:text="Headache"
                    android:onClick="save"/>
                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/nauseaCheckBox"
                    android:text="Nausea"
                    android:onClick="save"/>
                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/vomitingCheckBox"
                    android:text="Vomiting"
                    android:onClick="save"/>
                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/balanceProblemsCheckBox"
                    android:text="Balance Problems"
                    android:onClick="save"/>
                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/dizzinessCheckBox"
                    android:text="Dizziness"
                    android:onClick="save"/>
                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/visualProblemsCheckBox"
                    android:text="Visual Problems"
                    android:onClick="save"/>
                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/fatigueCheckBox"
                    android:text="Fatigue"
                    android:onClick="save"/>
                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/sensitivityToLightCheckBox"
                    android:text="Sensitivity To Light"
                    android:onClick="save"/>
                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/sensitivityToNoiseCheckBox"
                    android:text="Sensitivity To Noise"
                    android:onClick="save"/>
                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/numbnessTinglingCheckBox"
                    android:text="Numbness/Tingling"
                    android:onClick="save"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/cognitiveLayout"
                android:orientation="vertical"
                android:visibility="gone">
                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/feelingMentallyFoggyCheckBox"
                    android:text="Feeling Mentally Foggy"
                    android:onClick="save"/>
                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/feelingSlowedDownCheckBox"
                    android:text="Feeling Slowed Down"
                    android:onClick="save"/>
                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/difficultyConcentratingCheckBox"
                    android:text="Difficulty Concentrating"
                    android:onClick="save"/>
                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/difficultyRememberingCheckBox"
                    android:text="Difficulty Remembering"
                    android:onClick="save"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/emotionalLayout"
                android:orientation="vertical"
                android:visibility="gone">
                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/irritabilityCheckBox"
                    android:text="Irritability"
                    android:onClick="save"/>
                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/sadnessCheckBox"
                    android:text="Sadness"
                    android:onClick="save"/>
                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/moreEmotionalCheckBox"
                    android:text="More Emotional"
                    android:onClick="save"/>
                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/nervousnessCheckBox"
                    android:text="Nervousness"
                    android:onClick="save"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/sleepLayout"
                android:orientation="vertical"
                android:visibility="gone">
                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/drowsinessCheckBox"
                    android:text="Drowsiness"
                    android:onClick="save"/>
                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/sleepingLessThanUsualCheckBox"
                    android:text="Sleeping Less Than Usual"
                    android:onClick="save"/>
                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/sleepingMoreThanUsualCheckBox"
                    android:text="Sleeping More Than Usual"
                    android:onClick="save"/>
                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/troubleFallingAsleepCheckBox"
                    android:text="Trouble Falling Asleep"
                    android:onClick="save"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/tableLayout"
                android:orientation="vertical"
                android:visibility="gone">

                <ExpandableListView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tableExpandableListView"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/chartLayout"
                android:orientation="vertical"
                android:visibility="gone">

                <lecho.lib.hellocharts.view.LineChartView
                    android:id="@+id/lineChartView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>

                <TextView
                    android:id="@+id/emptyTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="There is not enough data to display the chart."
                    android:visibility="gone"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/splashLayout"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_gravity="center_horizontal"
                    android:id="@+id/logoImageView"
                    android:src="@drawable/logo"
                    android:layout_weight=".70"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:orientation="horizontal"
                    android:layout_weight=".30">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="20dp"
                        android:layout_gravity="center_vertical|right"
                        android:text="Developed by: Chris Connolly"
                        android:textStyle="bold"
                        android:textColor="@android:color/black"/>

                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/aboutLayout"
                android:orientation="vertical">
                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/app_description"/>
                </ScrollView>
            </LinearLayout>
        </LinearLayout>
    </android.support.v4.widget.SlidingPaneLayout>
</RelativeLayout>
